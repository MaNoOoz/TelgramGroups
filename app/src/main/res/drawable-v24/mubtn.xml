<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_hovered="false">
        <shape>
            <solid  android:color="#156365" />
            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"
                android:topLeftRadius="25dp"
                android:topRightRadius="25dp" />
            <gradient
                android:angle="270"
                android:endColor="#ff2824"
                android:gradientRadius="550dp"
                android:startColor="#ff080c"
                android:type="radial" />

            <stroke
                android:width="2dp"
                android:color="#2b6a8e" />

        </shape>
    </item>

    <item>
        <shape>
            <solid  android:color="#fc322f" />
            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"
                android:topLeftRadius="25dp"
                android:topRightRadius="25dp" />
            <gradient
                android:angle="-90"
                android:endColor="#cf120f"
                android:gradientRadius="250dp"
                android:startColor="#b8ffffff"
                android:type="linear" />
            <gradient
                android:angle="-90"
                android:endColor="#cf2f2c"
                android:gradientRadius="250dp"
                android:startColor="#cf120f"
                android:type="linear" />

            <stroke
                android:width="1dp"
                android:color="#c6ffffff" />

        </shape>
    </item>


</selector>