<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_hovered="false">
        <shape>
            <solid  android:color="#156365" />
            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"
                android:topLeftRadius="25dp"
                android:topRightRadius="25dp" />
            <gradient
                android:angle="270"
                android:endColor="#19f725"
                android:gradientRadius="550dp"
                android:startColor="#50f25a"
                android:type="radial" />

            <stroke
                android:width="2dp"
                android:color="#2b6a8e" />

        </shape>
    </item>

    <item>
        <shape>
            <solid  android:color="#08a312" />
            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"
                android:topLeftRadius="25dp"
                android:topRightRadius="25dp" />
            <gradient
                android:angle="-90"
                android:endColor="#069e22"
                android:gradientRadius="250dp"
                android:startColor="#e4e4e4"
                android:type="linear" />
            <gradient
                android:angle="-90"
                android:endColor="#069e22"
                android:gradientRadius="250dp"
                android:startColor="#069e22"
                android:type="linear" />

            <stroke
                android:width="1dp"
                android:color="#ffffff" />

        </shape>
    </item>


</selector>