<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/mUserName"
                        android:layout_width="0dp"
                        android:layout_height="15dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="8"
                        android:background="@color/green_700"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/amber_50"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                        app:layout_constraintVertical_bias="0.0" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/relativeLayout"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/mGroupName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Group Name"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mGroupLink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/mUserName"
                            android:text="Link"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mGroupDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/mGroupName"
                            android:layout_weight="1"
                            android:maxEms="10"
                            android:maxLines="3"
                            android:text="Group Desc"
                            android:textAlignment="center"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayout"
                        android:layout_width="94dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <ImageView
                            android:id="@+id/mGroupImage"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_centerInParent="true"
                            app:srcCompat="@drawable/btn8" />
                    </RelativeLayout>

                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        android:id="@+id/mRatingBar"
                        style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                        app:layout_constraintHorizontal_bias="0.533"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mUserName"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/mRateTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="(8)"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="@+id/mRatingBar"
                        app:layout_constraintStart_toEndOf="@+id/mRatingBar"
                        app:layout_constraintTop_toTopOf="@+id/mRatingBar"
                        app:layout_constraintVertical_bias="1.0" />


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:elevation="10dp">>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                            android:id="@+id/mFavBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="3"
                            android:background="@drawable/btn2"
                            android:cropToPadding="true"
                            android:elevation="10dp"
                            android:src="@drawable/ic_star_black_24dp"
                            android:tint="@android:color/white">


                        </ImageButton>

                        <ImageButton
                            android:id="@+id/mEnterBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="9"
                            android:background="@drawable/btn8"
                            android:cropToPadding="true"
                            android:src="@android:drawable/ic_menu_compass">

                        </ImageButton>

                        <ImageButton
                            android:id="@+id/mShareBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="3"
                            android:background="@drawable/btn"
                            android:src="@drawable/ic_share_black_24dp"
                            android:tint="@android:color/white">

                        </ImageButton>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                        <TextView
                            android:id="@+id/mCatogaries"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignStart="@+id/mGroupImage"

                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@android:color/holo_blue_light"
                            android:gravity="center"
                            android:text="Catogries"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_light"
                            android:textSize="10sp" />

                        <ImageButton
                            android:id="@+id/mViewsIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/ic_visibility_black_24dp"
                            android:cropToPadding="true"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="89dp" />

                        <TextView
                            android:id="@+id/mNumOfViews"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            tools:ignore="SmallSp"
                            tools:layout_editor_absoluteX="80dp"
                            tools:layout_editor_absoluteY="81dp"
                            tools:text="5" />

                        <ImageButton
                            android:id="@+id/mCommentsIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="@mipmap/action_comment_icon"
                            android:cropToPadding="true"
                            android:tint="#4b4e4f"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="89dp" />

                        <TextView
                            android:id="@+id/mNumOfComments"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            tools:ignore="SmallSp"
                            tools:layout_editor_absoluteX="80dp"
                            tools:layout_editor_absoluteY="81dp"
                            tools:text="5" />

                        <ImageButton
                            android:id="@+id/mLikesIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="@mipmap/action_like_gray"
                            android:cropToPadding="true"
                            android:tint="#4b4e4f"
                            tools:layout_editor_absoluteX="60dp"
                            tools:layout_editor_absoluteY="89dp" />

                        <TextView
                            android:id="@+id/mNumOfLikes"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:text="1"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            tools:ignore="SmallSp"
                            tools:layout_editor_absoluteX="36dp"
                            tools:layout_editor_absoluteY="81dp" />

                        <ImageButton
                            android:id="@+id/mReportBtn"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/ic_warning_black_24dp"
                            android:backgroundTint="@color/red_700"
                            android:contentDescription="Report This">

                        </ImageButton>

                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
