<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/mGroupImage"
                            android:layout_width="69dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:padding="5dp"
                            android:src="@drawable/placeholder"
                            android:text="A"
                            android:textAlignment="center"
                            android:textColor="@color/amber_50"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:civ_border_color="#ffffff"
                            app:civ_border_width="2dp"
                            app:layout_constraintBottom_toTopOf="@+id/mCatPic"
                            app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                            app:layout_constraintHorizontal_bias="0.017"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.666" />

                        <TextView
                            android:id="@+id/mCatPic"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="8"
                            android:background="@drawable/button_background"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/amber_50"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                            app:layout_constraintHorizontal_bias="0.017"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                            android:id="@+id/mRatingBar"
                            style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                            app:layout_constraintHorizontal_bias="0.083"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/mCatPic"
                            app:layout_constraintVertical_bias="0.02" />

                        <TextView
                            android:id="@+id/mRateTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="8" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bc_purple"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/linearLayout5"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/mName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:text="Android Group"
                            android:textAlignment="center"
                            android:textColor="@color/amber_50"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mGroupLink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/mCatPic"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:text="http://"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/mGroupDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/mName"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:maxEms="10"
                            android:maxLines="3"
                            android:padding="10dp"
                            android:text="Group Desc Group DescGroup DescGroup DescGroup DescGroup DescGroup DescGroup DescGroup DescGroup DescGroup DescGroup Desc"
                            android:textAlignment="center"
                            android:textColor="@color/amber_50"
                            android:textSize="12sp" />

                    </LinearLayout>


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:elevation="10dp">

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                            android:id="@+id/mFavBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="3"
                            android:background="@drawable/btn2"
                            android:cropToPadding="true"
                            android:elevation="10dp"
                            android:src="@drawable/ic_star_black_24dp"
                            android:tint="@android:color/white">


                        </ImageButton>

                        <ImageButton
                            android:id="@+id/mEnterBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="9"
                            android:background="@drawable/btn8"
                            android:cropToPadding="true"
                            android:src="@android:drawable/ic_menu_compass">

                        </ImageButton>

                        <ImageButton
                            android:id="@+id/mShareBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="3"
                            android:background="@drawable/btn"
                            android:src="@drawable/ic_share_black_24dp"
                            android:tint="@android:color/white">

                        </ImageButton>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                        <TextView
                            android:id="@+id/mCity"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignStart="@+id/mGroupImage"

                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bc_blue"
                            android:gravity="center"
                            android:text="City"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_light"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/mCatogaries"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignStart="@+id/mGroupImage"

                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bc_brown"
                            android:gravity="center"
                            android:text="Catogries"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_light"
                            android:textSize="10sp" />

                        <ImageButton
                            android:id="@+id/mViewsIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/ic_visibility_black_24dp"
                            android:cropToPadding="true"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="89dp" />

                        <TextView
                            android:id="@+id/mNumOfViews"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            tools:ignore="SmallSp"
                            tools:layout_editor_absoluteX="80dp"
                            tools:layout_editor_absoluteY="81dp"
                            tools:text="100000" />

                        <ImageButton
                            android:id="@+id/mCommentsIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="@mipmap/action_comment_icon"
                            android:cropToPadding="true"
                            android:tint="#4b4e4f"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="89dp" />

                        <TextView
                            android:id="@+id/mNumOfComments"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            tools:ignore="SmallSp"
                            tools:layout_editor_absoluteX="80dp"
                            tools:layout_editor_absoluteY="81dp"
                            tools:text="5" />

                        <ImageButton
                            android:id="@+id/mLikesIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="@mipmap/action_like_gray"
                            android:cropToPadding="true"
                            android:tint="#4b4e4f"
                            tools:layout_editor_absoluteX="60dp"
                            tools:layout_editor_absoluteY="89dp" />

                        <TextView
                            android:id="@+id/mNumOfLiksTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:text="1000000"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            tools:ignore="SmallSp"
                            tools:layout_editor_absoluteX="36dp"
                            tools:layout_editor_absoluteY="81dp" />

                        <ImageButton
                            android:id="@+id/mReportBtn"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/ic_warning_black_24dp"
                            android:backgroundTint="@color/red_700"
                            android:contentDescription="Report This">

                        </ImageButton>

                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
