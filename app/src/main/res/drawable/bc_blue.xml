<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_hovered="false">
        <shape>
            <solid  android:color="#FF141881" />
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
            <gradient
                android:angle="270"
                android:endColor="#FF141881"
                android:gradientRadius="550dp"
                android:startColor="#141881"
                android:type="radial" />

            <stroke
                android:width="2dp"
                android:color="#efefef" />

        </shape>
    </item>

    <item>
        <shape>
            <solid  android:color="#e0711094" />
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
            <gradient
                android:angle="-90"
                android:endColor="#141881"
                android:gradientRadius="250dp"
                android:startColor="#141881"
                android:type="linear" />
            <gradient
                android:angle="-90"
                android:endColor="#141881"
                android:gradientRadius="250dp"
                android:startColor="#1e70c8"
                android:type="linear" />

            <stroke
                android:width="1dp"
                android:color="#c6ffffff" />

        </shape>
    </item>


</selector>